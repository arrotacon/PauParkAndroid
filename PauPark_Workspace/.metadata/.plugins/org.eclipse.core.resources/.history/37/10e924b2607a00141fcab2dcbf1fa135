package fr.univpau.pauparkdroid;

import android.content.Context;
import android.util.AttributeSet;
import android.view.View;
import android.widget.AdapterView;
import android.widget.AdapterView.OnItemSelectedListener;
import android.widget.Spinner;

public class Home_Listener implements OnItemSelectedListener {
	
	public Home_Listener(Context context, AttributeSet attrs, int defStyleAttr) {
		super();
		// TODO Auto-generated constructor stub
	}

	public void onItemSelected(AdapterView<?> parent, View view, int position,
			   long id) {
		
		Spinner spinner;
			  spinnerOsversions.setSelection(position);
			  String selState = (String) spinnerOsversions.getSelectedItem();
			  selVersion.setText("Selected Android OS:" + selState);
			 }

			  @Override
			 public void onNothingSelected(AdapterView<?> arg0) {
			  // TODO Auto-generated method stub
			  }

}
